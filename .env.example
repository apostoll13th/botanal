# ==============================================
# Telegram Bot Configuration
# ==============================================

# REQUIRED: Your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ==============================================
# Database Configuration
# ==============================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/expenses

# ==============================================
# Logging Configuration
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=expense_bot.log

# Maximum log file size in bytes (default: 10MB)
LOG_MAX_BYTES=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ==============================================
# Web Interface Configuration
# ==============================================

# Base URL for the web interface
WEB_APP_URL=http://localhost:8080

# ==============================================
# Scheduled Tasks Configuration
# ==============================================

# Time for daily report (24-hour format)
DAILY_REPORT_HOUR=21
DAILY_REPORT_MINUTE=0

# Time for reminder check (24-hour format)
REMINDER_CHECK_HOUR=9
REMINDER_CHECK_MINUTE=0

# ==============================================
# Budget Alert Configuration
# ==============================================

# Percentage threshold for budget alerts (0-100)
# Alerts are sent when spending exceeds this percentage
BUDGET_ALERT_THRESHOLD=80
